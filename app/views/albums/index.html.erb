<h1>All Albums</h1>

<% form_tag albums_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>


<hr>
<br />

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
        <tr>
            <td>
              <div class ="album-listing">
                <%= link_to album.title.upcase, album, id: album.title %>
              </div>
            </td>&nbsp;
            <td>
              <div class="album-listing">
                <%= album.created_at %>
              </div>
            </td>
        </tr>
    <% end %>
  </tbody>
</table>
