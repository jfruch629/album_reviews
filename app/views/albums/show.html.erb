<h2><%= @album.title %></h2>
<hr>
<p id="notice"><%= notice %></p>

 <% if @album.user == current_user %>
   You uploaded this album!
 <% else %>
   <%= @user.first_name %> <%= @user.last_name %> <b>(<%= @user.email %>)</b> uploaded this album page.
 <% end %>

<h4>Artist: <%= @album.artist %><h4>

<h4>Release Date: <%= @album.release_year %></h4>

<h4>Genre: <%= @album.genre %> </h4>

 <% if @album.tracks? %>
   <p>
     <strong>Tracks:</strong><br />
     <%= @album.tracks.each_with_index do |track, n| %>
       <%= (n   1) %>. <%= track %><br />
     <% end %>
   <% else %>
     No Tracks Listed Yet!
 <% end %>
 </p>

<p>Most Recent Reviews<p>
  <% if !(@album.reviews.nil?) %>
  <tbody>
    <% @album.reviews.each do |review| %>
      <tr>
        <td>
          <hr><br />
          <%= review.body %>
          <br /><br /><br />
          <p>
          </p>
        </td>
          reviewed on: <%= review.created_at.to_s %> by <%= review.user.first_name %> <%= review.user.last_name %>
      </tr>
    <% end %>
  <% end %>
</tbody>
</table>
</div>
  <%= render "reviews/form", review: @review, album: @album %>

 <br />
 <% if current_user == @album.user %>
    <%= link_to 'Update', edit_album_path(@album) %> |
    <%= link_to 'Destroy', @album, method: :delete, data: { confirm: 'Are you sure?' } %> |
  <% end %>
  <%= link_to 'Back', root_path %>
