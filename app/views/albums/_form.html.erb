  <div class="field">
    <%= f.label :starting_year %><br />
    <%= f.text_field :starting_year, id: :album_starting_year %>
  </div>
  <br />
  <div class="field">
    <%= f.label :genre %><br />
    <%= f.text_field :genre, id: :album_genre %>
  </div>
  <br />
  <div class="field">
    <%= f.fields_for :tracks do |t| %><br />
